<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFD733"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Socios con cuotas vencidas"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Ejemplo de lista estática -->
            <TextView android:text="Juan Pérez - 2 cuotas" style="@style/TextAppearance.AppCompat.Medium" android:padding="8dp"/>
            <TextView android:text="Carlos García - 1 cuota" style="@style/TextAppearance.AppCompat.Medium" android:padding="8dp"/>
            <TextView android:text="Marcelo Martínez - 1 cuota" style="@style/TextAppearance.AppCompat.Medium" android:padding="8dp"/>
            <TextView android:text="Cristian Castro - 4 cuotas" style="@style/TextAppearance.AppCompat.Medium" android:padding="8dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnPagarCuota"
        android:text="PAGAR CUOTA"
        android:textStyle="bold"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
