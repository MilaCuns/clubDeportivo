<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_degradado"
    android:padding="24dp"
    tools:context=".AsignarActividadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asignar actividades al cliente"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Lista de actividades -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E0E0E0"
            android:padding="8dp">

            <RadioGroup
                android:id="@+id/grupoActividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton android:text="Actividad 1" android:id="@+id/act1" />
                <RadioButton android:text="Actividad 2" android:id="@+id/act2" />
                <RadioButton android:text="Actividad 3" android:id="@+id/act3" />
                <RadioButton android:text="Actividad 4" android:id="@+id/act4" />
                <RadioButton android:text="Actividad 5" android:id="@+id/act5" />
                <RadioButton android:text="Actividad 6" android:id="@+id/act6" />
                <RadioButton android:text="Actividad 7" android:id="@+id/act7" />
                <RadioButton android:text="Actividad 8" android:id="@+id/act8" />
                <RadioButton android:text="Actividad 9" android:id="@+id/act9" />
                <RadioButton android:text="Actividad 10" android:id="@+id/act10" />
            </RadioGroup>
        </LinearLayout>

        <!-- Campo de texto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI socio/no socio:"
            android:textColor="#000000"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/inputDni"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Ej: 12345678"
            android:inputType="number"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Botón -->
        <Button
            android:id="@+id/btnAsignar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asignar actividad"
            android:textAllCaps="false"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/boton_redondeado_negro"/>
    </LinearLayout>
</ScrollView>
